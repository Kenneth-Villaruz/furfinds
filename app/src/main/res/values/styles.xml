    <style name="SearchBoxContainer">
        <item name="android:background">@drawable/rounded_searchbox</item>
        <item name="android:padding">@dimen/padding_6</item>
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="SearchBoxInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:maxLength">32</item>
        <item name="android:elevation">0dp</item>
        <item name="android:hint">@string/placeholder_search</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SearchBoxButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/rounded_search_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Find</item>
    </style>

    <style name="ProfileInformationItems" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_dark_800</item>
    </style>

    <style name="ProfileInformationItemValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_keyboard_arrow_right_24</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- BOTTOM NAVIGATION -->
    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary_darker</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
<!--        <item name="android:textStyle">normal</item>-->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BottomNavMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="menu">@menu/bottom_nav_menu</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigation.ActiveItemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigation.InactiveItemTextAppearance</item>
    </style>

    <!-- TITLE TEXT -->
    <style name="PageTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ContainerFluid_TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
    </style>

    <!-- CONTENT BOXES / CONTAINERS -->
    <style name="ContainerFluid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="elevation">8dp</item>
    </style>
</resources>