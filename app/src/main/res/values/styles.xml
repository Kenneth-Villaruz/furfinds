<resources>

    <style name="Widget.Theme.FurFindsPetShop.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.FurFindsPetShop.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!--=== REUSABLE COMPONENT STYLES ===-->

    <!-- LOGO IMAGE -->
    <style name="LogoImage">
        <item name="android:src">@drawable/logo</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>

    <style name="LargeLogo200" parent="LogoImage">
        <item name="android:layout_width">@dimen/size_200</item>
        <item name="android:layout_height">@dimen/size_200</item>
    </style>

    <style name="MediumLogo120" parent="LogoImage">
        <item name="android:layout_width">@dimen/size_120</item>
        <item name="android:layout_height">@dimen/size_120</item>
    </style>

    <!-- BUTTON STYLES -->
    <style name="FlatStyleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Primary_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="White_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="White_Button_Shadow" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="Light_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_light</item>
        <item name="android:textColor">@color/color_dark</item>
    </style>

    <style name="Warning_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_warning</item>
        <item name="android:textColor">@color/color_darker</item>
    </style>

    <style name="Danger_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Success_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Transparent_Button" parent="FlatStyleButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Transparent_Back_Button" parent="FlatStyleButton">
        <item name="android:background">@drawable/transparent_back_button_primary</item>
        <item name="android:textColor">@drawable/transparent_back_button_text_color</item>
    </style>

    <style name="Transparent_Button_Hover_White" parent="FlatStyleButton">
        <item name="android:background">@drawable/rounded_button_transparent_hover_white</item>
    </style>

    <style name="LabelButton" parent="Transparent_Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_400</item>
        <item name="android:layout_height">@dimen/size_30</item>
    </style>

    <!-- INPUT FIELDS -->
    <style name="VerificationCode_Input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:textStyle">bold</item>
    </style>

